{
  "include": [
    "./src/**/*.ts",
    "./i18n/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "isolatedModules": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "ES2019",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "."
  }
}